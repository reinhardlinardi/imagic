<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.imagic.imagic">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher_magic_wand"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_magic_wand_round"
        android:supportsRtl="true"
        android:theme="@style/ImagicTheme">
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.imagic.imagic.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <activity
            android:name=".MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuActivity"
            android:configChanges="orientation"
            android:label="@string/menu_activity_title"
            android:screenOrientation="portrait" />
        <activity
            android:name=".HistogramActivity"
            android:configChanges="orientation"
            android:label="@string/histogram_activity_title"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ContrastEnhancementActivity"
            android:configChanges="orientation"
            android:label="@string/contrast_enhancement_activity_title"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EqualizerActivity"
            android:configChanges="orientation"
            android:label="@string/equalizer_activity_title"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NumberOCRActivity"
            android:configChanges="orientation"
            android:label="@string/number_ocr_activity_title"
            android:screenOrientation="portrait" />
    </application>

</manifest>