<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context="com.imagic.imagic.MainActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/welcomeImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="@string/welcome_image_description"
        app:srcCompat="@drawable/ic_magic_wand_64" />

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/welcome_message"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        style="?android:attr/buttonBarStyle">

        <Button
            android:id="@+id/selectImageButton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_light"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_folder"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/select_image_button_text"
            android:textColor="@android:color/white"
            tools:layout_marginRight="5dp" />

        <Button
            android:id="@+id/captureImageButton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:background="@android:color/holo_blue_dark"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_camera"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/capture_image_button_text"
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>
